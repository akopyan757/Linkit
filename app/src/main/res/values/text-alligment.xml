<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Linkit.TextAppearanceRegular" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Theme.Linkit.TextAppearanceRegular.H1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Linkit.TextAppearanceRegular.Body1">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Theme.Linkit.TextAppearanceRegular.Body2">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Theme.Linkit.TextAppearanceTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Theme.Linkit.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/textSizePrimary</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Linkit.Text.Title">
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="Theme.Linkit.Text.Body1">
        <item name="android:textSize">@dimen/textSizeSecondary</item>
    </style>

    <style name="Theme.Linkit.Text.Body1.Bold">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.Linkit.Text.Body2">
        <item name="android:textSize">@dimen/textSizeTertiary</item>
    </style>\

    <style name="Theme.Linkit.Text.Body3">
        <item name="android:textSize">@dimen/textSizeQuartiary</item>
    </style>

</resources>