<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Linkit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/disabled</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="toolbarStyle">@style/Theme.Linkit.Toolbar</item>

        <item name="android:itemTextAppearance">@style/Theme.Linkit.TextAppearanceRegular</item>
    </style>
    
    <style name="Theme.Linkit.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/Theme.Linkit.TextAppearanceTitle</item>
    </style>

    <style name="Theme.Linkit.TabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@drawable/shadow_tab_layout</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingStart">@dimen/marginTertiary</item>
        <item name="tabPaddingEnd">@dimen/marginTertiary</item>
        <item name="tabPaddingTop">@dimen/marginTertiary</item>
        <item name="tabPaddingBottom">@dimen/marginTertiary</item>
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="Theme.Linkit.TabItem" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/marginTertiary</item>
        <item name="android:paddingBottom">@dimen/marginTertiary</item>
        <item name="android:paddingStart">@dimen/paddingFolderTabItem</item>
        <item name="android:paddingEnd">@dimen/paddingFolderTabItem</item>
        <item name="android:background">@drawable/shadow_tab_item</item>
        <item name="android:elevation">@dimen/elevationTertiary</item>
        <item name="android:textAppearance">@style/Theme.Linkit.TextAppearanceRegular</item>
    </style>

    <style name="Theme.Linkit.ItemUrl" parent="Widget.AppCompat.TextView">
        <item name="android:autoLink">web</item>
        <item name="android:ellipsize">end</item>
        <item name="android:ems">3</item>
        <item name="android:linksClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:textAppearance">@style/Theme.Linkit.TextAppearanceRegular.Body2</item>
    </style>

    <style name="Theme.Linkit.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="hintTextColor">@color/disabled</item>
        <item name="colorControlActivated">@color/link</item>
        <item name="colorControlHighlight">@color/link</item>
        <item name="colorControlNormal">@color/link</item>
    </style>

    <style name="Theme.Linkit.TextInputLayout.Password">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/black</item>
    </style>

    <style name="Theme.Linkit.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Theme.Linkit.TextAppearanceRegular</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="Theme.Linkit.EditText.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:ems">3</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Theme.Linkit.EditText.ReadOnly" parent="Widget.AppCompat.TextView">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="Theme.Linkit.ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Linkit.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/button_text_size</item>
        <item name="android:textAppearance">@style/Theme.Linkit.TextAppearanceRegular</item>
        <item name="elevation">@dimen/elevationSecondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Linkit.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/background_dialog</item>
        <item name="windowFixedWidthMajor">60%</item>
    </style>

    <style name="Theme.Linkit.ProfileButton" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Theme.Linkit.TextAppearanceRegular</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_down</item>
    </style>

    <style name="Theme.Linkit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Linkit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearanceOverlay.App.CornerSize" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>