<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="observable"
            type="com.akopyan757.linkit.viewmodel.observable.LinkObservable" />
    </data>

    <com.akopyan757.linkit.common.custom.SquareCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginTertiary"
        android:minWidth="100dp"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:cardElevation="@dimen/elevationSecondary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLinkDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@{observable.description}"
                android:textAppearance="@style/Theme.Linkit.Text.Body3"
                app:layout_constraintEnd_toEndOf="@+id/tvLinkTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvLinkTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkTitle"
                app:visibility="@{observable.descriptionVisible}"
                tools:text="Description" />

            <ImageView
                android:id="@+id/ivLinkPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:maxWidth="@dimen/linkPictureBigWidth"
                android:maxHeight="@dimen/linkPictureBigHeight"
                android:minWidth="@dimen/linkIconMinWidth"
                android:minHeight="@dimen/linkIconMinHeight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{observable.photoUrl}" />

            <TextView
                android:id="@+id/tvLinkTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginTertiary"
                android:layout_marginEnd="@dimen/marginTertiary"
                android:ellipsize="end"
                android:ems="3"
                android:maxLines="3"
                android:text="@{observable.title}"
                android:textAppearance="@style/Theme.Linkit.Text.Body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLinkPhoto"
                tools:text="Title" />

            <ImageView
                android:id="@+id/ivLinkShare"
                style="@style/Theme.Linkit.ClickableImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/todo"
                android:padding="@dimen/marginSecondary"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintEnd_toStartOf="@+id/ivLinkCopy"
                app:layout_constraintTop_toTopOf="@+id/ivLinkCopy"
                app:tint="@color/tintColor" />

            <ImageView
                android:id="@+id/ivLinkCopy"
                style="@style/Theme.Linkit.ClickableImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/todo"
                android:padding="@dimen/marginSecondary"
                android:src="@drawable/ic_baseline_content_copy_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/tintColor" />

            <TextView
                android:id="@+id/tvLinkUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTertiary"
                android:layout_marginBottom="@dimen/marginSecondary"
                android:autoLink="web"
                android:ellipsize="end"
                android:ems="3"
                android:linksClickable="false"
                android:maxLines="2"
                android:singleLine="true"
                android:text="@{observable.url}"
                android:textColorLink="@color/linkColor"
                android:textSize="@dimen/textSizeQuartiary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvLinkTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvLinkTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkDescription"
                app:layout_constraintVertical_bias="1.0"
                tools:text="https://google.com" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.akopyan757.linkit.common.custom.SquareCardView>

</layout>