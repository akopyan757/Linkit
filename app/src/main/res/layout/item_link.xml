<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="observable"
            type="com.akopyan757.linkit.viewmodel.observable.LinkObservable" />
        <variable
            name="listener"
            type="com.akopyan757.linkit.viewmodel.listener.LinkClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginSecondary"
        android:layout_marginStart="@dimen/marginSecondary"
        android:layout_marginTop="@dimen/marginQuartiary"
        android:layout_marginEnd="@dimen/marginSecondary"
        android:layout_marginBottom="@dimen/marginQuartiary"
        android:onClick="@{(view) -> listener.onItemListener(observable)}"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:cardElevation="@dimen/elevationSecondary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLinkDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginTertiary"
                android:ellipsize="end"
                android:ems="3"
                android:maxLines="3"
                android:text="@{observable.description}"
                android:textAppearance="@style/Theme.Linkit.Text.Body2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvLinkTitle"
                app:layout_constraintStart_toStartOf="@+id/guidelineLink"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkTitle"
                app:layout_constraintVertical_bias="0.0"
                app:visibility="@{observable.descriptionVisible}"
                tools:text="Description" />

            <ImageView
                android:id="@+id/ivLinkPhoto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                android:maxWidth="@dimen/linkPictureWidth"
                android:maxHeight="@dimen/linkPictureHeight"
                android:minWidth="@dimen/linkIconMinWidth"
                android:minHeight="@dimen/linkIconMinHeight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineLink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/image_analysis" />

            <TextView
                android:id="@+id/tvLinkTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginTertiary"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{observable.title}"
                android:textAppearance="@style/Theme.Linkit.Text.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineLink"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title" />

            <ImageView
                android:id="@+id/ivLinkShare"
                style="@style/Theme.Linkit.ClickableImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/todo"
                android:focusable="true"
                android:padding="@dimen/marginSecondary"
                android:onClick="@{(view) -> listener.onShareListener(observable)}"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/tintColor" />

            <TextView
                android:id="@+id/tvLinkUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginTertiary"
                android:layout_marginTop="@dimen/marginSecondary"
                android:layout_marginBottom="@dimen/marginSecondary"
                android:autoLink="web"
                android:ellipsize="end"
                android:ems="3"
                android:linksClickable="false"
                android:singleLine="true"
                android:text="@{observable.url}"
                android:textColorLink="@color/linkColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivLinkShare"
                app:layout_constraintStart_toStartOf="@+id/guidelineLink"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkDescription"
                tools:text="https://google.com" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/linkPictureWidth" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>