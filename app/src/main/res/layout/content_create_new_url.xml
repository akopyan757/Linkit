<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.akopyan757.linkit.viewmodel.LinkCreateUrlViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dialogMinWidth">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilClipboardUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSecondary"
            android:layout_marginTop="@dimen/marginSecondary"
            android:layout_marginEnd="@dimen/marginSecondary"
            style="@style/Theme.Linkit.TextInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietClipboardUrl"
                style="@style/Theme.Linkit.EditText.ReadOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="3"
                android:hint="@string/url"
                android:maxLines="5"
                android:text="@{viewModel.url}" />

        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/cardPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginPrimary"
            android:clipToPadding="false"
            layout="@layout/item_link"
            app:observable="@{viewModel.linkObservable}"
            app:visibility="@{viewModel.linObservableVisible}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilClipboardUrl"
            tools:layout="@layout/item_link" />

        <Spinner
            android:id="@+id/spCreateLinkAssignToFolder"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/marginPrimary"
            android:layout_marginBottom="@dimen/marginTertiary"
            android:background="@drawable/background_spinner"
            android:dropDownVerticalOffset="60dp"
            android:popupBackground="@drawable/background_edit_text"
            android:prompt="@string/prompt"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tilClipboardUrl"
            app:layout_constraintStart_toStartOf="@+id/tilClipboardUrl"
            app:layout_constraintTop_toBottomOf="@+id/cardPreview"
            app:selectedValue="@={viewModel.selectedFolderName}"
            tools:text="Not selected" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>