<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.akopyan757.linkit.viewmodel.LinkCreateUrlViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dialogMinWidth">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etClipboardUrl"
            style="@style/Theme.Linkit.EditText.ReadOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSecondary"
            android:layout_marginTop="@dimen/marginSecondary"
            android:layout_marginEnd="@dimen/marginSecondary"
            android:elevation="@dimen/elevationPrimary"
            android:background="@drawable/shadow_tab_layout"
            android:paddingStart="@dimen/marginSecondary"
            android:paddingTop="@dimen/marginTertiary"
            android:paddingBottom="@dimen/marginTertiary"
            android:ellipsize="end"
            android:ems="3"
            android:hint="@string/url"
            android:maxLines="5"
            android:text="@{viewModel.url}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/cardPreview"
            layout="@layout/item_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSecondary"
            android:layout_marginTop="@dimen/marginSecondary"
            android:layout_marginEnd="@dimen/marginSecondary"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardTabLayoutFolder"
            app:observable="@{viewModel.linkObservable}"
            app:visibility="@{viewModel.linObservableVisible}"
            tools:layout="@layout/item_link" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/cardTabLayoutFolder"
            style="@style/Theme.Linkit.TabLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/tabLayout_folder_height"
            android:layout_marginStart="@dimen/marginSecondary"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/marginSecondary"
            android:background="@drawable/shadow_tab_layout"
            android:elevation="@dimen/marginTertiary"
            android:spinnerMode="dropdown"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etClipboardUrl" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>