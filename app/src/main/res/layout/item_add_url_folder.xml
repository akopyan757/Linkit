<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="observable"
            type="com.akopyan757.linkit.viewmodel.observable.FolderObservable" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginTertiary"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:cardElevation="@dimen/elevationSecondary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/marginQuartiary"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/marginSecondary"
            android:paddingVertical="@dimen/marginQuartiary"
            android:text="@{observable.name}"
            android:textAppearance="@style/Theme.Linkit.Text.Body2"
            app:drawableStartCompat="@drawable/ic_baseline_folder_24"
            tools:text="Folder" />

    </androidx.cardview.widget.CardView>

</layout>